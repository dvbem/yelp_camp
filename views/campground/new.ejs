<%- include("../partials/header") %>

<h1 style="text-align: center;">Add a new campground</h1>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="campground name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="campground price" min="0.0" step="0.1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="campground image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="campground description">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>    
</div>

<%- include("../partials/footer") %>
